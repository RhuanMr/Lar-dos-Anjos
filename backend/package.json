{
  "name": "pawhub-backend",
  "version": "1.0.0",
  "description": "Backend para PawHub - Sistema de gerenciamento para ONGs de animais",
  "type": "commonjs",
  "main": "dist/app.js",
  "scripts": {
    "dev": "node -r tsconfig-paths/register -r ts-node/register src/app.ts",
    "dev:watch": "ts-node-dev -r tsconfig-paths/register --transpile-only src/app.ts",
    "dev:inspect": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9229 --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "clean": "rmdir /s /q dist",
    "type-check": "tsc --noEmit",
    "lint": "tsc --strict",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "keywords": [
    "ong",
    "animais",
    "adoção",
    "pawhub"
  ],
  "author": "PawHub Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  }
}
